# Bot Token (obrigatório)
DISCORD_TOKEN=your_bot_token_here

# Database (opcional - padrão: SQLite)
DATABASE_TYPE=sqlite  # ou postgresql
DATABASE_URL=sqlite:///modbot.db  # ou postgresql://user:pass@host:port/dbname

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/bot.log

# Admin Configuration
SUPER_ADMIN_IDS=123456789,987654321  # IDs separados por vírgula

# Health Check (opcional)
HEALTH_CHECK_PORT=8080
ENABLE_HEALTH_CHECK=false

# Telemetry (opcional)
ENABLE_TELEMETRY=true
ALERT_CHANNEL_ID=  # Canal para alertas críticos
